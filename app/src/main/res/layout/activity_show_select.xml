<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowSelectActivity"
    android:background="#FFF7F9">

    <android.support.v7.widget.Toolbar
        android:id="@+id/showToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/main_title"
        app:titleTextColor="@color/white"/>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ShowRecyclerView"
        android:layout_width="match_parent"
        android:layout_below="@id/showToolbar"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/noShowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showToolbar"


        android:layout_centerInParent="true"
        android:paddingTop="75pt"

        android:src="@drawable/ic_empty_placeholder"

        tools:src="@drawable/ic_empty_placeholder" />

    <TextView
        android:id="@+id/noShowsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/noShowImage"
        android:text="No Shows to show"
        android:textSize="20dp"

        android:layout_centerInParent="true"/>





</RelativeLayout>