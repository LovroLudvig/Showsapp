<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEpisodeActivity"
    android:background="#FFF7F9">
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/addEpisodeToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Add Episode"
        app:titleTextColor="@color/white"/>


    <EditText
        android:id="@+id/episodeName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_below="@id/addEpisodeToolbar"
        android:layout_centerInParent="true"
        android:paddingTop="50pt"/>
    <EditText
        android:id="@+id/episodeDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="description"
        android:layout_below="@id/episodeName"
        android:layout_centerInParent="true"/>
    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="10pt"
        android:layout_below="@id/episodeDescription"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/space"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"/>
</RelativeLayout>