<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEpisodeActivity"
    android:orientation="vertical"
    android:background="#FFF7F9">

    <android.support.v7.widget.Toolbar
        android:id="@+id/addEpisodeToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Add Episode"
        app:titleTextColor="@color/white"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/addPhotoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/episodeImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/addPhotoIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/addPhotoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add photo"
                android:layout_centerInParent="true"
                android:paddingTop="40dp"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/episodeName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/episodePicker"
            android:onClick="pickerOnClick"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Season and Episode"
            android:textSize="20dp"
            android:textColor="#969696"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/selectedEpisode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/episodeDescription"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="text"/>
        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="10pt" />
        <Button
            android:id="@+id/saveButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"/>

    </LinearLayout>
    </ScrollView>

</LinearLayout>

