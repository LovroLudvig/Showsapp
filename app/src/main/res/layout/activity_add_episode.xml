<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEpisodeActivity"
    android:background="#FFF7F9">
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/addEpisodeToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Add Episode"
        app:titleTextColor="@color/white"/>
    <ImageView
        android:id="@+id/episodeImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/addEpisodeToolbar"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/addPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/ic_add_a_photo_black_24dp"
        android:layout_below="@id/addEpisodeToolbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/addphotoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add photo"
        android:layout_below="@id/addPhotoButton"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPrimary"/>


    <EditText
        android:id="@+id/episodeName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_below="@id/addEpisodeToolbar"
        android:layout_centerInParent="true"
        android:paddingTop="50pt"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/episodePicker"
        android:onClick="pickerOnClick"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Season and Episode"
        android:layout_below="@id/episodeName"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:textSize="20dp"
        android:textColor="#969696"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/selectedEpisode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Unknown"
        android:layout_below="@id/episodeName"
        android:layout_centerInParent="true"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="5dp"
        android:paddingTop="22dp"/>

    <EditText
        android:id="@+id/episodeDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:layout_below="@id/episodePicker"
        android:layout_centerInParent="true"/>
    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="10pt"
        android:layout_below="@id/episodeDescription"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/space"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"/>
</RelativeLayout>